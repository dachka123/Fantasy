  username: String!

  password: String!
}

input RegisterInput {
  username: String!

  email: String!

  password: String!
}

input CreateUserInput {
  username: String!

  email: String!

  password: String!

  role: UserRole! = USER
}

input CreateTeamInput {
  name: String!

  description: String

  userPhoto: String

  userId: ID
}

input CreatePlayerPoolInput {
  name: String!

  nickname: String

  userPhoto: String

  jerseyNumber: Int

  position: PlayerPosition!

  status: PlayerStatus

  height: Int

  heightCm: Int

  weightKg: Float

