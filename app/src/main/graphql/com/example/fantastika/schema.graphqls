  playerCount: Int!

  wins: Int!

  losses: Int!

  totalPoints: Int!

  createdAt: DateTime!

  updatedAt: DateTime!
}

type Query {
  users: [User!]!

  user(id: ID!): User

  teams: [Team!]!

  team(id: ID!): Team

  userTeams(userId: ID!): [Team!]!

  allTeamsAdmin: [Team!]!

  players: [Player!]!

  availablePlayers: [Player!]!

  player(id: ID!): Player

  allPlayersPool: [Player!]!
}

type Mutation {
  login(input: LoginInput!): LoginResponse!

  register(input: RegisterInput!): User!

  registerAdmin(input: RegisterInput!): User!

  createUser(input: CreateUserInput!): User!

  updateUserRole(id: ID!, role: UserRole!): User

  createTeam(input: CreateTeamInput!): Team!

  deleteTeam(teamId: ID!): Boolean!

  updateTeam(teamId: ID!, input: CreateTeamInput!): Team!

  assignPlayerToTeam(teamId: ID!, playerId: ID!): Player!

  removePlayerFromTeam(playerId: ID!): Player!

  createPlayerForPool(input: CreatePlayerPoolInput!): Player!

  deletePlayerFromPool(playerId: ID!): Boolean!

  updatePlayerAvailability(playerId: ID!, isAvailable: Boolean!): Player!

  updatePlayerFromPool(playerId: ID!, input: CreatePlayerPoolInput!): Player!
}

